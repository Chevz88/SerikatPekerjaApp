<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulir Pengaduan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pengadu" />

        <EditText
            android:id="@+id/edtNIK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIK"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/edtDepartemen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Departemen"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtIsiAduan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:hint="Isi Aduan"
            android:inputType="textMultiLine"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnKirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Aduan"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/merah"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:backgroundTint="@color/abu"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
